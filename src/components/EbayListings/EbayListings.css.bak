/* EbayListings.css */
.ebay-listings {
  padding: 2rem;
  max-width: 1400px;
  margin: 0 auto;
}

/* Header Styles */
.listings-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 2rem;
  padding: 1.5rem;
  background: var(--gradient-primary);
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-lg);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.header-content h1 {
  font-size: 2.5rem;
  font-weight: 700;
  margin: 0;
  background: var(--gradient-text);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.header-content p {
  color: var(--text-secondary);
  margin: 0.5rem 0 0 0;
  font-size: 1.1rem;
}

/* Sync Status */
.sync-status {
  display: flex;
  align-items: center;
}

.sync-toggle {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 1.5rem;
  border: none;
  border-radius: var(--border-radius-md);
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  backdrop-filter: blur(10px);
}

.sync-toggle.connected {
  background: var(--gradient-success);
  color: white;
  box-shadow: var(--shadow-md);
}

.sync-toggle.disconnected {
  background: var(--gradient-error);
  color: white;
  box-shadow: var(--shadow-md);
}

.sync-indicator {
  width: 0.5rem;
  height: 0.5rem;
  border-radius: 50%;
  background: currentColor;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

/* Sync Panel */
.sync-panel {
  margin-bottom: 2rem;
  padding: 1.5rem;
  background: var(--surface-primary);
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-lg);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.sync-details h3 {
  margin: 0 0 1rem 0;
  color: var(--text-primary);
  font-size: 1.25rem;
}

.sync-metrics {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 1rem;
}

.sync-metrics .metric {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0.75rem;
  background: var(--surface-secondary);
  border-radius: var(--border-radius-md);
}

.sync-metrics .metric .label {
  color: var(--text-secondary);
  font-weight: 500;
}

.sync-metrics .metric .value {
  color: var(--text-primary);
  font-weight: 600;
}

.sync-metrics .metric.error .value {
  color: var(--error-color);
}

/* Controls */
.listings-controls {
  margin-bottom: 2rem;
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.export-actions {
  display: flex;
  gap: 1rem;
  flex-wrap: wrap;
}

.btn-instant-export,
.btn-quick-export,
.btn-bulk-export {
  padding: 0.75rem 1.5rem;
  border: none;
  border-radius: var(--border-radius-md);
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: var(--shadow-md);
  backdrop-filter: blur(10px);
}

.btn-instant-export {
  background: var(--gradient-accent);
  color: white;
  font-size: 1.1rem;
  animation: pulse-glow 2s infinite;
}

@keyframes pulse-glow {
  0%, 100% { box-shadow: var(--shadow-glow); }
  50% { box-shadow: 0 0 20px rgba(255, 68, 0, 0.5); }
}

.btn-quick-export {
  background: var(--gradient-secondary);
  color: white;
}

.btn-bulk-export {
  background: var(--gradient-primary);
  color: white;
}

/* Filter Controls */
.filter-controls {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 1rem;
}

.control-group {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.control-group.checkbox {
  flex-direction: row;
  align-items: center;
  gap: 0.5rem;
}

.control-group label {
  color: var(--text-secondary);
  font-weight: 500;
  font-size: 0.9rem;
}

.control-group input,
.control-group select {
  padding: 0.75rem;
  border: 1px solid var(--border-color);
  border-radius: var(--border-radius-md);
  background: var(--surface-primary);
  color: var(--text-primary);
  font-size: 0.9rem;
  transition: all 0.3s ease;
}

.control-group input:focus,
.control-group select:focus {
  outline: none;
  border-color: var(--primary-color);
  box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.1);
}

.control-group input[type="checkbox"] {
  width: 1.25rem;
  height: 1.25rem;
  cursor: pointer;
}

/* Bulk Actions */
.bulk-actions {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.selection-controls {
  display: flex;
  align-items: center;
  gap: 1rem;
  flex-wrap: wrap;
}

.btn-select-all,
.btn-clear-selection {
  padding: 0.5rem 1rem;
  border: 1px solid var(--border-color);
  border-radius: var(--border-radius-md);
  background: var(--surface-primary);
  color: var(--text-primary);
  font-weight: 500;
  cursor: pointer;
  transition: all 0.3s ease;
}

.btn-select-all:hover,
.btn-clear-selection:hover {
  background: var(--surface-secondary);
  border-color: var(--primary-color);
}

.selection-count {
  color: var(--text-secondary);
  font-weight: 500;
  padding: 0.5rem 1rem;
  background: var(--surface-secondary);
  border-radius: var(--border-radius-md);
}

.bulk-operation-buttons {
  display: flex;
  gap: 1rem;
  flex-wrap: wrap;
}

.btn-bulk-export-selected,
.btn-bulk-price-update,
.btn-bulk-category-update {
  padding: 0.75rem 1.5rem;
  border: none;
  border-radius: var(--border-radius-md);
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: var(--shadow-md);
}

.btn-bulk-export-selected {
  background: var(--gradient-primary);
  color: white;
}

.btn-bulk-price-update {
  background: var(--gradient-success);
  color: white;
}

.btn-bulk-category-update {
  background: var(--gradient-secondary);
  color: white;
}

/* Summary Stats */
.listings-summary {
  margin-bottom: 2rem;
  padding: 1.5rem;
  background: var(--surface-primary);
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-lg);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.summary-stats {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 1.5rem;
}

.summary-stat {
  text-align: center;
  padding: 1rem;
  background: var(--surface-secondary);
  border-radius: var(--border-radius-md);
  transition: all 0.3s ease;
}

.summary-stat:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-md);
}

.stat-label {
  display: block;
  color: var(--text-secondary);
  font-size: 0.9rem;
  margin-bottom: 0.5rem;
  font-weight: 500;
}

.stat-value {
  display: block;
  font-size: 1.75rem;
  font-weight: 700;
  color: var(--text-primary);
  background: var(--gradient-text);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* Bulk Operations Panel */
.bulk-operations-panel {
  margin-bottom: 2rem;
  padding: 1.5rem;
  background: var(--surface-primary);
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-lg);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.bulk-operations-panel h3 {
  margin: 0 0 1rem 0;
  color: var(--text-primary);
  font-size: 1.25rem;
}

.operations-list {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.operation-item {
  padding: 1rem;
  background: var(--surface-secondary);
  border-radius: var(--border-radius-md);
  border-left: 4px solid var(--primary-color);
  transition: all 0.3s ease;
}

.operation-item.running {
  border-left-color: var(--warning-color);
}

.operation-item.completed {
  border-left-color: var(--success-color);
}

.operation-item.failed {
  border-left-color: var(--error-color);
}

.operation-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0.75rem;
}

.operation-type {
  font-weight: 600;
  color: var(--text-primary);
}

.operation-status {
  padding: 0.25rem 0.75rem;
  border-radius: var(--border-radius-sm);
  font-size: 0.8rem;
  font-weight: 600;
  text-transform: uppercase;
}

.operation-item.pending .operation-status {
  background: var(--surface-tertiary);
  color: var(--text-secondary);
}

.operation-item.running .operation-status {
  background: var(--warning-color);
  color: white;
}

.operation-item.completed .operation-status {
  background: var(--success-color);
  color: white;
}

.operation-item.failed .operation-status {
  background: var(--error-color);
  color: white;
}

.operation-progress {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.progress-bar {
  flex: 1;
  height: 0.5rem;
  background: var(--surface-tertiary);
  border-radius: var(--border-radius-sm);
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: var(--gradient-primary);
  border-radius: var(--border-radius-sm);
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 0.9rem;
  color: var(--text-secondary);
  font-weight: 500;
}

.operation-error {
  margin-top: 0.75rem;
  padding: 0.75rem;
  background: rgba(220, 53, 69, 0.1);
  border: 1px solid var(--error-color);
  border-radius: var(--border-radius-md);
  color: var(--error-color);
  font-size: 0.9rem;
}

/* Listings Grid */
.listings-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(450px, 1fr));
  gap: 2rem;
}

.listing-card {
  background: var(--surface-primary);
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-lg);
  overflow: hidden;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
}

.listing-card:hover {
  transform: translateY(-5px);
  box-shadow: var(--shadow-xl);
}

.listing-card.selected {
  border-color: var(--primary-color);
  box-shadow: 0 0 0 2px rgba(0, 123, 255, 0.2);
}

.listing-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1rem;
  background: var(--gradient-primary);
}

.listing-score {
  display: flex;
  align-items: center;
}

.score-circle {
  text-align: center;
  color: white;
  padding: 1rem;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  min-width: 4rem;
  min-height: 4rem;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.score-value {
  font-size: 1.5rem;
  font-weight: 700;
  line-height: 1;
}

.score-label {
  font-size: 0.7rem;
  text-transform: uppercase;
  margin-top: 0.25rem;
  opacity: 0.9;
}

.card-selection input[type="checkbox"] {
  width: 1.5rem;
  height: 1.5rem;
  cursor: pointer;
  accent-color: var(--primary-color);
}

/* Listing Content */
.listing-content {
  padding: 1.5rem;
}

.listing-content h3 {
  margin: 0 0 0.5rem 0;
  color: var(--text-primary);
  font-size: 1.5rem;
  font-weight: 700;
}

.card-details {
  color: var(--text-secondary);
  font-size: 0.9rem;
  margin-bottom: 1rem;
}

/* Metrics */
.listing-metrics {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 1rem;
  margin-bottom: 1.5rem;
  padding: 1rem;
  background: var(--surface-secondary);
  border-radius: var(--border-radius-md);
}

.metric {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.metric-label {
  font-size: 0.8rem;
  color: var(--text-secondary);
  font-weight: 500;
}

.metric-value {
  font-size: 1.1rem;
  font-weight: 600;
  color: var(--text-primary);
}

.metric-value.suggested {
  color: var(--primary-color);
}

.metric-value.profit {
  color: var(--success-color);
}

/* AI Suggestions */
.ai-suggestions {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
  padding: 1rem;
  background: var(--surface-secondary);
  border-radius: var(--border-radius-md);
}

.ai-suggestion {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0.75rem;
  background: var(--surface-primary);
  border-radius: var(--border-radius-sm);
  border: 1px solid var(--border-color);
}

.suggestion-price {
  font-size: 1.1rem;
  font-weight: 700;
  color: var(--primary-color);
}

.suggestion-reason {
  flex: 1;
  margin: 0 1rem;
  color: var(--text-secondary);
  font-size: 0.9rem;
}

.suggestion-confidence {
  font-size: 0.8rem;
  color: var(--text-secondary);
  font-weight: 500;
}

/* Reasons */
.listing-reasons {
  margin-bottom: 1.5rem;
}

.listing-reasons h4 {
  margin: 0 0 0.75rem 0;
  color: var(--text-primary);
  font-size: 1rem;
  font-weight: 600;
}

.listing-reasons ul {
  margin: 0;
  padding: 0;
  list-style: none;
}

.listing-reasons li {
  padding: 0.25rem 0;
  color: var(--text-secondary);
  font-size: 0.9rem;
  position: relative;
  padding-left: 1.5rem;
}

.listing-reasons li::before {
  content: '✓';
  position: absolute;
  left: 0;
  color: var(--success-color);
  font-weight: bold;
}

/* Details */
.listing-details {
  border-top: 1px solid var(--border-color);
  padding-top: 1rem;
  margin-bottom: 1.5rem;
}

.detail-section {
  margin-bottom: 0.75rem;
}

.detail-section h4 {
  margin: 0 0 0.5rem 0;
  color: var(--text-secondary);
  font-size: 0.8rem;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  font-weight: 600;
}

.listing-title {
  font-size: 0.9rem;
  color: var(--text-primary);
  background: var(--surface-secondary);
  padding: 0.75rem;
  border-radius: var(--border-radius-sm);
  margin: 0;
  word-break: break-word;
  font-family: monospace;
}

.price-range {
  font-size: 1rem;
  color: var(--primary-color);
  font-weight: 600;
  margin: 0;
}

.category-path {
  font-size: 0.85rem;
  color: var(--text-secondary);
  margin: 0;
}

/* Actions */
.listing-actions {
  display: flex;
  gap: 0.75rem;
  margin-top: 1rem;
}

.listing-actions button {
  flex: 1;
  padding: 0.75rem 1rem;
  border: none;
  border-radius: var(--border-radius-md);
  font-size: 0.9rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: var(--shadow-sm);
}

.btn-create-listing {
  background: var(--gradient-success);
  color: white;
}

.btn-create-listing:hover {
  background: var(--gradient-success);
  box-shadow: var(--shadow-md);
}

.btn-view-details {
  background: var(--surface-secondary);
  color: var(--text-primary);
  border: 1px solid var(--border-color);
}

.btn-view-details:hover {
  background: var(--surface-tertiary);
  border-color: var(--primary-color);
}

/* No Recommendations */
.no-recommendations {
  text-align: center;
  padding: 4rem 2rem;
  background: var(--surface-primary);
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-lg);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.no-recommendations p {
  margin: 0.5rem 0;
  color: var(--text-secondary);
  font-size: 1.1rem;
}

/* High Score Highlighting */
.listing-card[data-high-score="true"] {
  border-color: var(--warning-color);
  box-shadow: 0 0 0 2px rgba(255, 193, 7, 0.2);
}

.listing-card[data-high-score="true"] .listing-header {
  background: var(--gradient-warning);
}

/* Responsive Design */
@media (max-width: 768px) {
  .ebay-listings {
    padding: 1rem;
  }

  .listings-header {
    flex-direction: column;
    gap: 1rem;
    text-align: center;
  }

  .header-content h1 {
    font-size: 2rem;
  }

  .export-actions {
    flex-direction: column;
  }

  .filter-controls {
    grid-template-columns: 1fr;
  }

  .summary-stats {
    grid-template-columns: repeat(2, 1fr);
  }

  .listings-grid {
    grid-template-columns: 1fr;
  }

  .listing-metrics {
    grid-template-columns: 1fr;
  }

  .listing-actions {
    flex-direction: column;
  }

  .ai-suggestion {
    flex-direction: column;
    align-items: flex-start;
    gap: 0.5rem;
  }

  .suggestion-reason {
    margin: 0;
  }
}

@media (max-width: 480px) {
  .ebay-listings {
    padding: 0.75rem;
  }

  .header-content h1 {
    font-size: 1.75rem;
  }

  .summary-stats {
    grid-template-columns: 1fr;
  }

  .selection-controls {
    flex-direction: column;
    align-items: stretch;
  }

  .bulk-operation-buttons {
    flex-direction: column;
  }
}
}